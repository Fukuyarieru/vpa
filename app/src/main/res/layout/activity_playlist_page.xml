<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.PlaylistPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Playlist_Page_Button_UserPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="userPage" />

        <Button
            android:id="@+id/Playlist_Page_Button_Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="playlistOptions" />

        <Button
            android:id="@+id/Playlist_Page_Button_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Playlist_Page_ImageView_Image"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:scaleType="centerCrop"
            android:layout_weight="0"
            app:srcCompat="@drawable/default_playlist_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10sp"
                android:id="@+id/Playlist_Page_TextView_Title"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="playlistTitle" />

            <TextView
                android:id="@+id/Playlist_Page_TextView_Description"
                android:layout_gravity="center"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="playlistDescription" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Playlist_Page_TextView_Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Score" />

        <ListView
            android:id="@+id/Playlist_Page_ListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>