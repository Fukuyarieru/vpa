<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5sp"
    tools:context=".ListViewComponents.Comment_ListView_Component">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Comment_ListView_Component_ImageView_UserImage"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="5sp"
            android:scaleType="centerInside"
            android:src="@drawable/default_user_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Comment_ListView_Component_TextView_UserName"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="UserName" />

            <TextView
                android:id="@+id/Comment_ListView_Component_ImageView_Comment"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Comment" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>